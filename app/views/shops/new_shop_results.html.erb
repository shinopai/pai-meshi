<div id="main-content">
  <!-- menu -->
  <%= render 'partial/menu' %>

  <section>
    <h1 class="text-red-500 font-bold text-xl"><%= @results['results_returned'] %>件の検索結果</h1>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-4 mt-5 mb-12">
      <article>
        <section class="mt-6 grid md:grid-cols-2 lg:grid-cols-4 gap-x-6 gap-y-8">
          <% if @results['shop'] %>
          <% @results['shop'].each do |shop| %>
          <article class="bg-white group relative rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transform duration-200">
            <div class="px-3 py-4">
              <h3 class="text-sm text-gray-500 pb-2">
                <%= link_to new_form_path(shop: shop), class: 'py-1 px-2' do %>
                <span class="absolute inset-0"></span>
                <%= shop['name'] %>
                <% end %>
              </h3>
            </div>
          </article>
          <% end %>
          <% else %>
          <p>検索結果は見つかりませんでした</p>
          <% end %>
        </section>
      </article>
    </div>
  </section>
</div>
