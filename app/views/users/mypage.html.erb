<div id="main-content">
  <!-- menu -->
  <%= render 'partial/menu' %>

  <section>
    <h1 class="text-red-500 font-bold text-xl">マイページ</h1>
    <h2 class="text-red-500 text-lg mt-5">登録情報</h2>
    <span class="block">ユーザー名:&nbsp;<%= current_user.name %></span>
    <%= link_to '行きたいお店リスト', user_wants_path(current_user), class: 'bg-red-600 text-white p-2 rounded mt-5 inline-block' %>
    <h2 class="text-red-500 text-lg mt-5">投稿したレビュー</h2>
    <div id="menu" class="container px-4">
      <div class="flex flex-wrap mt-6 justify-start">
        <% if current_user.reviews.exists? %>
        <% current_user.reviews.each do |review| %>
        <div class="mt-3 grid grid-cols-1 sm:grid-cols-6 md:grid-cols-6 lg:grid-cols-6 xl:grid-cols-6 gap-4">
          <div class="col-span-2 sm:col-span-1 xl:col-span-1">
            <%= link_to image_tag(review.shop.shop_image.url, class: 'h-24 w-24 rounded mx-auto'), shop_path(review.shop) %>
          </div>
          <div class="mt-3 col-span-2 sm:col-span-4 xl:col-span-4">
            <span class="mt-1"><span class="bg-gray-300 px-2 rounded">予算</span>&nbsp;<%= review.price.to_s(:delimited) %>円</span>
            <span class="ml-2 mt-1"><span class="bg-gray-300 px-2 rounded">評価</span>&nbsp;<%= review.score %></span>
            <p>
              <%= review.comment %>
            </p>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </section>
</div>
