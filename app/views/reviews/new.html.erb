<div id="main-content">
  <!-- menu -->
  <%= render 'partial/menu' %>

  <section>
    <h1 class="text-red-500 font-bold text-xl">感動を投稿する</h1>
    <div class="md:p-12 flex flex-row flex-wrap">
      <%= form_with model: @review, url: reviews_path(user: @current_user, shop: @shop), local: true, class: 'lg:w-2/3 mt-5 lg:mt-0 p-5 bg-white w-full mx-auto tw-h-full' do |new_review| %>
      <%= render 'partial/validation_error_messages', model: @review %>

      <div class="text-lg text-indigo-900">「<%= @shop.shop_name %>」に行ったときのことを教えて下さい</div>

      <div class="flex-col flex py-3">
        <h2 class="pb-2 text-gray-700 font-semibold">金額(必須)</h2>
        <div><span class="border px-2 py-1 rounded" id="price-value">0</span>&nbsp;円</div>
        <%= new_review.range_field :price, class: 'p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200 w-full mt-3', in: 0..10000, step: 500, id: 'price', value: 0 %>
      </div>

      <div class="flex-col flex py-3">
        <h2 class="pb-2 text-gray-700 font-semibold">評価(必須)</h2>
        <div><span class="border px-2 py-1 rounded" id="score-value">0</span></div>
        <%= new_review.range_field :score, class: 'p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200 w-full mt-3', in: 0..10, step: 1, id: 'score', value: 0 %>
      </div>

      <div class="flex-col flex py-3">
        <%= new_review.label :comment, 'コメント(必須)', class: 'pb-2 text-gray-700 font-semibold' %>
        <%= new_review.text_area :comment, class: 'p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200 resize-none', rows: 5 %>
      </div>

      <div class="mt-3">
        <%= new_review.submit '投稿する', class: 'p-3 bg-red-600 text-white w-full hover:bg-red-800 cursor-pointer' %>
      </div>
      <% end %>
    </div>
  </section>
</div>
