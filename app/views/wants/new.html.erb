<div id="main-content">
  <!-- menu -->
  <%= render 'partial/menu' %>

  <section>
    <h1 class="text-red-500 font-bold text-xl">行きたいお店を保存する</h1>
    <div class="md:p-12 flex flex-row flex-wrap">
      <%= form_with model: @want, url: user_wants_path(current_user), local: true, class: 'md:w-1/2-screen m-0 p-5 bg-white w-2/3 mx-auto tw-h-full' do |new_want| %>
      <%= render 'partial/validation_error_messages', model: @want %>

      <div class="text-lg text-indigo-900">行きたいお店を保存しておく</div>

      <div class="flex-col flex py-3">
        <%= new_want.label :shop_name, '店名(必須)', class: 'pb-2 text-gray-700 font-semibold' %>
        <%= new_want.text_field :shop_name, class: 'p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200' %>
      </div>

      <div class="flex-col flex py-3">
        <%= new_want.label :address, '住所(必須)', class: 'pb-2 text-gray-700 font-semibold' %>
        <%= new_want.text_field :address, class: 'p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200' %>
      </div>

      <div class="flex-col flex py-3">
        <%= new_want.label :memo, 'メモ', class: 'pb-2 text-gray-700 font-semibold' %>
        <%= new_want.text_area :comment, class: 'p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200 resize-none', rows: 3 %>
      </div>

      <div class="mt-3">
        <%= new_want.submit '保存する', class: 'p-3 bg-red-600 text-white w-full hover:bg-red-800 cursor-pointer' %>
      </div>
      <% end %>
    </div>
  </section>
</div>
